<!DOCTYPE html>
<html lang="en">

<head>
    <title>Registro - Cool Cloth</title>
    <%- include ('partials/head') %>
</head>

<body>
    <!--===================================  HEADER ===================================-->
    <%- include ('partials/navBar') %>
        <!--===============================================================================-->

        <main class="mainProductAdd">
            <section>
                <h1>Agregar productos</h1>
                    <% if (locals.errors) { %>      
                        <% for(i=0; i< errors.length; i++){ %>
                            <p class="is-dangeros">
                                <%=JSON.stringify(errors[i].msg)%>
                            </p>
                            <% }%>
                    <% } %>
                    <% if (locals.errorsProduct && errorsProduct.photoProduct) { %>
                        <p class="is-dangeros">  <%= errorsProduct.photoProduct.msg %> </p>
                     <% } %>
                     <div class="errores">
                         <ul></ul>
                     </div>
                <form action="/products/addProduct" method="POST" class="formularyProcuctAdd" enctype="multipart/form-data">
                    <div class="containerFormAdd">
                        <div class="formProductAdd">

                            <div class="FormProcuctsAdd">
                                <label for="model">Modelo:</label>
                                <input type="text" name="model" minlength="1" class="model" ></input>
                            </div>
                            
                            <div class="ProductAdd">
                                <label for="type_id">Tipo de prenda:</label>
                                <select name="type_id" style="font-size: 14px; outline: none;">
                                    <option value="0" disabled selected>- Seleccione un tipo- </option>
                                    <% tipos.forEach(tipos => { %>
                                     <option value="<%= tipos.id_type_products %>"><%= tipos.name_type_products%></option>
                                    <% }); %>
                                </select>
                                    
                            </div>
                            <div class="FormProcuctsAdd">
                                <label for="price">Precio:</label>
                                <input type="number" name="price" placeholder="$" minlength="1" class="precio" >
                            </div>
                            <div class="FormProcuctsAdd">
                                <label for="description_short">Descripci贸n corta:</label>
                                <input type="text" name="description_short" placeholder="Escribe la descripci贸n breve" minlength="5"  class="description-short"></input>
                            </div>
                            <div class="FormProcuctsAdd">
                                <label for="description">Descripci贸n detallada:</label>
                                <textarea rows="10" cols="50" name="description" placeholder="Escribe una breve descripci贸n del producto" minlength="10" class="description"></textarea>
                            </div>
                        </div>
                        <div >
                            <div class="profile">
                                <div id="fotoProducto1"></div>
                                <input type="file" name="uploadedImage" id="uploadedImage" accept=".jpg, .png, .svg" class="photoProduct">
                            </div>
                        </div>
                    </div>

                    <div class="ProductAddBtnform">
                        <input type="submit" class="ProductAddBtn" value="Agregar">
                    </div>
                </form>
            </section>
        </main>

        <!--=================================== FOOTER ===================================-->
        <%- include ('partials/footer') %>
            <!--==============================================================================-->
   <script src="/js/valFormProduct.js"></script>   
</body>

</html>